{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "aptPkgs": ["curl", "git"],
          "cmds": ["npm install"]
        },
        "build": {
          "cmds": ["npm run build:server"]
        },
        "start": {
          "cmd": "npm run start"
        }
      },
      "variables": {
        "NODE_VERSION": "20"
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "autoDeploy": true
  }
}